<!DOCTYPE html>
<html lang="en">
  <%- include("../header"); %>
  <body>
    <%- include("../menu"); %>

    <!-- Material input -->
    <div class="md-form">
      <input
        type="text"
        id="title"
        value="<%= result.title%>"
        class="form-control"
        readonly
      />
      <label for="title">Title</label>
    </div>
    <div class="md-form">
      <input
        type="text"
        id="director"
        value="<%= result.director %>"
        class="form-control"
        readonly
      />
      <label for="director">Director</label>
    </div>
    <div class="md-form">
      <input
        type="text"
        id="year"
        value="<%= result.year %>"
        class="form-control"
        readonly
      />
      <label for="year">Year</label>
    </div>
    <button
      type="button"
      class="btn btn-primary"
      onclick="location.href='/api/movie'"
    >
      목록
    </button>
    <button
      type="button"
      class="btn btn-primary"
      onclick="location.href='/api/movie/<%= result._id %>/edit'"
    >
      수정
    </button>
    <button id="deleteBtn" type="button" class="btn btn-primary">
      삭제
    </button>
    <%- include("../footer"); %>
    <script>
      $(function () {
        // 삭제
        $("#deleteBtn").on("click", () => {
          const result = confirm("삭제하시겠습니까?");
          if (result) {
            $.ajax({
              url: "/api/movie/<%= result._id %>",
              type: "DELETE",
            })
              .done(() => {
                location.href = "/api/movie";
              })
              .fail((request, status, error) => {
                alert(request.responseText);
              });
          }
        });
      });
    </script>
  </body>
</html>
