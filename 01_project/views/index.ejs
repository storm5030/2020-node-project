<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("header"); %>
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <link rel="stylesheet" href="/stylesheets/indexgrid.css" />
  </head>

  <body>
    <div class="wrapper">
      <div class="content">
        <%- include("menu"); %>
        <div class="carousel-wrapper">
          <!--Section: Content-->
          <section class="text-center dark-grey-text mb-5">
            <div class="row" style="margin: 0;">
              <div class="col-md-12" style="padding: 0;">
                <!--Carousel Wrapper-->
                <div id="carousel-example-1z" class="carousel slide carousel-fade" data-ride="carousel">
                  <!--Indicators-->
                  <ol class="carousel-indicators">
                    <li data-target="#carousel-example-1z" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-1z" data-slide-to="1"></li>
                    <li data-target="#carousel-example-1z" data-slide-to="2"></li>
                  </ol>
                  <!--/.Indicators-->
                  <!--Slides-->
                  <div class="carousel-inner" role="listbox" style="height: auto;">
                    <!--First slide-->
                    <div class="carousel-item active">
                      <a
                        href="http://caching2.lottecinema.co.kr/lotte_image/2020/GretelHansel/0619/GretelHansel_1280720.mp4"
                        target="blank"
                      >
                        <img class="d-block w-100" src="/images/그레텔과 헨젤 index.jpg" alt="First slide" />
                      </a>
                    </div>
                    <!--/First slide-->
                    <!--Second slide-->
                    <div class="carousel-item">
                      <a
                        href="http://caching2.lottecinema.co.kr/lotte_image/2020/Peninsula/Peninsula_1280720.mp4"
                        target="blank"
                      >
                        <img class="d-block w-100" src="/images/반도 index.jpg" alt="Second slide"
                      /></a>
                    </div>
                    <!--/Second slide-->
                    <!--Third slide-->
                    <div class="carousel-item">
                      <a
                        href="http://caching2.lottecinema.co.kr/lotte_image/2020/OneDay/OneDay_1280720.mp4"
                        target="blank"
                        ><img class="d-block w-100" src="/images/원 데이 index.jpg" alt="Third slide"
                      /></a>
                    </div>
                    <!--/Third slide-->
                  </div>
                  <!--/.Slides-->
                  <!--Controls-->
                  <a class="carousel-control-prev" href="#carousel-example-1z" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#carousel-example-1z" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
                  <!--/.Controls-->
                </div>
                <!--/.Carousel Wrapper-->
              </div>
            </div>
          </section>
          <!--Section: Content-->
        </div>
        <div class="grid-wrapper">
          <p class="eventtext" style="font-weight: bold;">이벤트</p>
          <div class="gridcontainer my-custom-scrollbar my-custom-scrollbar-primary">
            <div class="griditem grid1">
              <a href="https://www.lottecinema.co.kr/NLCHS/Events/E101170040520002" target="blank">
                <img class="event event_1" src="/images/이벤트1.jpg" alt="1"
              /></a>
            </div>
            <div class="griditem grid2">
              <a
                href="https://event.lottecinema.co.kr/NLCHS/Event/EventTemplateInfo?eventId=201010016920124"
                target="blank"
              >
                <img class="event event_2" src="/images/이벤트2.jpg" alt="2"
              /></a>
            </div>
            <div class="griditem grid3">
              <a
                href="https://event.lottecinema.co.kr/NLCHS/Event/EventTemplateInfo?eventId=101010040520016"
                target="blank"
              >
                <img class="event event_3" src="/images/이벤트3.jpg" alt="3"
              /></a>
            </div>
            <div class="griditem grid4">
              <a
                href="https://www.lottecinema.co.kr/NLCHS/Event/EventTemplateInfo?eventId=501010024618005"
                target="blank"
              >
                <img class="event event_4" src="/images/이벤트4.jpg" alt="4"
              /></a>
            </div>
            <div class="griditem grid5">
              <a
                href="https://event.lottecinema.co.kr/NLCHS/Event/EventTemplateInfo?eventId=201010016920115"
                target="blank"
              >
                <img class="event event_5" src="/images/이벤트5.jpg" alt="5"
              /></a>
            </div>
            <div class="griditem grid6">
              <a
                href="https://event.lottecinema.co.kr/NLCHS/Event/EventTemplateInfo?eventId=101010040520028"
                target="blank"
              >
                <img class="event event_6" src="/images/이벤트6.jpg" alt="6"
              /></a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include("footer"); %>
    <script>
      $(".carousel").carousel({
        interval: 5000,
      });
    </script>
  </body>
</html>
