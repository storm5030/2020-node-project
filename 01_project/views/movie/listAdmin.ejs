<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../header"); %>
    <link rel="stylesheet" href="/stylesheets/movie/listAdmin.css" />
  </head>

  <body>
    <div class="wrapper">
      <div class="content">
        <%- include("../menu"); %>
        <button type="button" class="btn btn-red mobile create" onclick="location.href='/api/movie/admin/new'">
          등록
        </button>
        <div class="listwrapper row row-cols-3 row-cols-md-1">
          <button type="button" class="btn btn-red wide" onclick="location.href='/api/movie/admin/new'">
            등록
          </button>
          <% result.forEach(movie => { %>
          <div class="col mb-1">
            <!-- Card -->
            <div class="card_">
              <!-- Card image -->
              <div class="card-image view overlay">
                <img
                  class="card-img-top"
                  src="/images/<%= movie.title.replace('#', '').replace(':', '') %>.jpg"
                  alt="Card image cap"
                />
                <div class="mask flex-center rgba-stylish-strong">
                  <button
                    type="button"
                    class="btn hoverbtn"
                    onclick="location.href='/api/movie/admin/<%= movie._id %>'"
                  >
                    상세정보
                  </button>
                </div>
              </div>
              <!-- Card content -->
              <div class="card-body" style="float: left;">
                <!-- Title -->
                <h4 class="card-title" style="font-weight: bolder;"><%= movie.title %></h4>
                <!-- Text -->
                <p class="card-text" style="margin-bottom: 0px;">
                  장르 : <%= movie.genre %> | <%= movie.year %>.<%= movie.date %> 개봉 | <%= movie.time %>분 | 감독 :
                  <%= movie.director %>
                </p>
              </div>
            </div>
            <!-- Card -->
          </div>
          <% }) %>
        </div>
      </div>
    </div>

    <%- include("../footer"); %>
  </body>
</html>
