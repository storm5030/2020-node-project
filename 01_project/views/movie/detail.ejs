<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../header"); %>
    <link rel="stylesheet" href="/stylesheets/movie/detail.css" />
  </head>

  <body>
    <div class="wrapper">
      <div class="content">
        <%- include("../menu"); %>

        <div class="card-wrapper">
          <!-- Card image -->
          <div class="card-image view overlay" style="display: inline-block;">
            <img
              class="card-img-top"
              src="/images/<%= result.title.replace('#', '').replace(':', '') %>.jpg"
              alt="Card image cap"
            />
            <div class="mask flex-center rgba-stylish-strong">
              <ul style="padding: 0; margin: 0;">
                <button type="button" class="btn hoverbtn" onclick="location.href='/api/reservation/<%=result._id %>'">
                  예매하기
                </button>
                <button type="button" class="btn hoverbtn" onclick="location.href='/api/movie'">
                  목록
                </button>
              </ul>
            </div>
          </div>

          <!-- Card content -->
          <div class="card-body" style="display: inline-block">
            <div style="display: inline-block; width: 100%;">
              <h4 class="card-title"><%= result.title %></h4>
            </div>
            <div class="btn-wrapper">
              <button type="button" class="btn btn-red" onclick="location.href='/api/reservation/<%=result._id %>'">
                예매하기
              </button>
              <button type="button" class="btn btn-red btn-right" onclick="location.href='/api/movie'">
                목록
              </button>
            </div>
            <p class="card-text text0">
              장르 : <%= result.genre %> | <%= result.year %>.<%= result.date %> 개봉 | <%= result.time %>분
            </p>
            <p class="card-text text1">
              <%= result.genre %> </br><%= result.year %>.<%= result.date %> 개봉 | 상영시간<%= result.time %>분
            </p>
            <p class="card-text text2">
              감독 : <%= result.director %>
            </p>
            <p class="card-text text3">
              출연 : <%= result.actor %>
            </p>
            <p class="card-text">
              누적관객수 : <%= result.audience.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") %>명
            </p>
          </div>
          <div class="card-body-wide">
            <p class="card-text"><b class="bold">감독</b> : <%= result.director %></p>
            <p class="card-text"><b class="bold">출연</b> : <%= result.actor %></p>
          </div>
          <div class="synopsis-wrapper">
            <p style="font-weight: bold;">시놉시스</p>
            <textarea class="synopsis" readonly><%= result.synopsis %></textarea>
          </div>
          <div class="my-5 w-100">
            <p style="font-weight: bold;">스틸컷/포토</p>
            <!--Section: Content-->
            <section class="text-center dark-grey-text mb-5">
              <div class="row">
                <div class="col-md-12">
                  <!--Carousel Wrapper-->
                  <div id="carousel-example-1z" class="carousel slide" data-ride="carousel">
                    <!--Indicators-->
                    <ol class="carousel-indicators">
                      <li data-target="#carousel-example-1z" data-slide-to="0" class="active"></li>
                      <li data-target="#carousel-example-1z" data-slide-to="1"></li>
                      <li data-target="#carousel-example-1z" data-slide-to="2"></li>
                    </ol>
                    <!--/.Indicators-->
                    <!--Slides-->
                    <div class="carousel-inner" role="listbox" style="height: auto;">
                      <!--First slide-->
                      <div class="carousel-item active">
                        <img
                          class="d-block w-100"
                          src="/images/<%= result.title.replace('#', '').replace(':', '') %>1.jpg"
                          alt="First slide"
                        />
                      </div>
                      <!--/First slide-->
                      <!--Second slide-->
                      <div class="carousel-item">
                        <img
                          class="d-block w-100"
                          src="/images/<%= result.title.replace('#', '').replace(':', '') %>2.jpg"
                          alt="Second slide"
                        />
                      </div>
                      <!--/Second slide-->
                      <!--Third slide-->
                      <div class="carousel-item">
                        <img class="d-block w-100" src="/images/<%= result.title.replace('#', '').replace(':', '')
                        %>3.jpg" alt="Third slide" /
                      </div>
                      <!--/Third slide-->
                    </div>
                    <!--/.Slides-->
                    <!--Controls-->
                    <a class="carousel-control-prev" href="#carousel-example-1z" role="button" data-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-example-1z" role="button" data-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="sr-only">Next</span>
                    </a>
                    <!--/.Controls-->
                  </div>
                  <!--/.Carousel Wrapper-->
                </div>
              </div>
            </section>
            <!--Section: Content-->
          </div>
        </div>
      </div>
    </div>
    <%- include("../footer"); %>
    <script>
      $(function () {
        // 삭제
        $("#deleteBtn").on("click", () => {
          const result = confirm("삭제하시겠습니까?");
          if (result) {
            $.ajax({
              url: "/api/movie/<%= result._id %>",
              type: "DELETE",
            })
              .done(() => {
                location.href = "/api/movie";
              })
              .fail((request, status, error) => {
                alert(request.responseText);
              });
          }
        });
      });
    </script>
  </body>
</html>
